<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".profil">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TODO: Update blank fragment layout -->

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/nama"
                android:layout_alignEnd="@+id/nama"
                android:layout_marginTop="50dp"
                android:layout_marginStart="0dp"
                android:text="PROFILE"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/profilpic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="0dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/profilpic" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profilpic"
            android:layout_alignStart="@+id/nama"
            android:layout_alignEnd="@+id/nama"
            android:layout_marginStart="0dp"
            android:layout_marginTop="37dp"
            android:fontFamily="@font/roboto"
            android:text="Nama"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/nama"
            android:layout_width="340dp"
            android:layout_height="48dp"
            android:layout_below="@+id/txtNama"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:background="@drawable/rounded_login"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txttglLahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama"
            android:layout_alignStart="@+id/nama"
            android:layout_alignEnd="@+id/nama"
            android:layout_marginTop="10dp"
            android:text="Tanggal Lahir"
            android:fontFamily="@font/roboto"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tglLahir"
            android:layout_width="340dp"
            android:layout_height="48dp"
            android:layout_below="@+id/txttglLahir"
            android:layout_alignStart="@+id/nama"
            android:layout_alignEnd="@+id/nama"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_login"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtjeniskelamin"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_below="@+id/tglLahir"
            android:layout_alignStart="@+id/nama"
            android:layout_alignEnd="@+id/nama"
            android:layout_marginTop="10dp"
            android:text="Jenis Kelamin"
            android:fontFamily="@font/roboto"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/jenisKelamin"
            android:layout_width="340dp"
            android:layout_height="48dp"
            android:layout_below="@+id/txtjeniskelamin"
            android:layout_alignStart="@+id/nama"
            android:layout_alignEnd="@+id/nama"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_login"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtpekerjaan"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_below="@+id/jenisKelamin"
            android:layout_alignStart="@+id/nama"
            android:layout_alignEnd="@+id/nama"
            android:layout_marginTop="10dp"
            android:text="Pekerjaan"
            android:fontFamily="@font/roboto"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/pekerjaan"
            android:layout_width="340dp"
            android:layout_height="48dp"
            android:layout_below="@+id/txtpekerjaan"
            android:layout_alignStart="@+id/nama"
            android:layout_alignEnd="@+id/nama"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_login"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/fifth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pekerjaan"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="11dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/keluar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/poppins_semibold"
                android:text="KELUAR"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTint="#F2CACA" />

            <Button
                android:id="@+id/editprofil"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/poppins_semibold"
                android:text="Edit Profil"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTint="#F2EECA" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>