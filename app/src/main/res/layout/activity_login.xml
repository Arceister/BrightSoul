<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".profil">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/email"
            android:layout_alignEnd="@+id/email"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Masuk"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt1"
            android:layout_alignStart="@+id/email"
            android:layout_alignEnd="@+id/email"
            android:layout_marginStart="0dp"
            android:layout_marginTop="47dp"
            android:fontFamily="@font/roboto"
            android:text="Email dan nomor Telepon"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="340dp"
            android:layout_height="48dp"
            android:layout_alignTop="@+id/txtemail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"
            android:background="@drawable/rounded_login"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtkatasandi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/email"
            android:layout_alignStart="@+id/katasandi"
            android:layout_alignEnd="@+id/katasandi"
            android:layout_marginStart="0dp"
            android:layout_marginTop="80dp"
            android:text="Kata Sandi"
            android:fontFamily="@font/roboto"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/katasandi"
            android:layout_width="340dp"
            android:layout_height="48dp"
            android:layout_alignTop="@+id/txtkatasandi"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="41dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/rounded_login"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            app:passwordToggleEnabled="true"
            android:fontFamily="@font/roboto"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lupakatasandi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/katasandi"
            android:layout_alignEnd="@+id/katasandi"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/roboto"
            android:text="Lupa kata sandi?"
            android:textColor="#479E50"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/rememberMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/lupakatasandi"
            android:layout_alignStart="@+id/katasandi"
            android:layout_alignEnd="@+id/katasandi"
            android:layout_marginStart="0dp"
            android:layout_marginTop="30dp"
            android:text="Remember Email"
            android:fontFamily="@font/roboto"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/fifth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rememberMe"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="11dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/login"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/poppins_semibold"
                android:text="MASUK"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:backgroundTint="#DFEEEA" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sixth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fifth"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="11dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/line1"
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/poppins_semibold"
                android:src="@drawable/line"/>
            <TextView
                android:id="@+id/textmasuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="atau masuk dengan"
                android:fontFamily="@font/roboto"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/line2"
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/poppins_semibold"
                android:src="@drawable/line" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/seventh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sixth"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="11dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/log1"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/poppins_semibold"
                android:src="@drawable/ic_fb" />

            <ImageView
                android:id="@+id/log2"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:src="@drawable/ic_google" />

            <ImageView
                android:id="@+id/log3"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/poppins_semibold"
                android:src="@drawable/ic_ig" />

        </LinearLayout>

        <TextView
            android:id="@+id/tidakPunyaAkun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/katasandi"
            android:layout_alignTop="@+id/seventh"
            android:layout_alignEnd="@+id/katasandi"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/tidak_punya_akun"
            android:textSize="18sp" />
    </RelativeLayout>
</ScrollView>